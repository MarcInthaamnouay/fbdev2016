{% extends "./admin/layout.twig" %} {% block content %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Création concours
            <a class="btn btn-default pull-right " href="#">
                <i class="fa fa-play start-button" aria-hidden="true"></i> Démarrer le concours
            </a>
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">Paramètres</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form">
                            <div class="form-group">
                                <label>Nom du concours</label>
                                <input class="form-control data" placeholder="Enter text" name="name">
                            </div>
                            <div class="form-group">
                                <label>Date de démarrage concours</label>
                                <input class="form-control data" type="date" placeholder="Enter text" min="{{controller.getCurrentContestData()}}" name="startdate">
                            </div>
                            <div class="form-group">
                                <label>Date de fin concours</label>
                                <input class="form-control data" type="date" placeholder="Enter text" min="{{controller.getCurrentContestData()}}" name="enddate">
                            </div>
                            <div class="form-group">
                                <label>Description du concours</label>
                                <textarea class="form-control data" rows="3" name="description"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Prix label</label>
                                <input class="form-control data" placeholder="Enter text" name="labelgift">
                            </div>
                            <div class="form-group">
                                <label>Lot</label>
                                <textarea class="form-control data" name="gift"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Color</label>
                                <input class="form-control bg-color data" value="{{controller.color['backgroundcolor']}}" name="color">
                            </div>
                            <div class="form-group">
                                <label>Background color</label>
                                <input class="form-control bg-color data" name="bgcolor">
                            </div>
                            <div class="form-group">
                                <label>Font color</label>
                                <input class="form-control f-color data" name="fcolor">
                            </div>
                            <div class="form-group">
                                <label>Hover font color</label>
                                <input class="form-control hf-color data" name="hfcolor">
                            </div>
                            <div class="form-group">
                                <label>Hover background color</label>
                                <input class="form-control hb-color data" name="hbcolor">
                            </div>
                            <button type="reset" class="btn btn-default pull-right valid-button" id="create-button">
                                <i class="fa fa-check" aria-hidden="true"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4"></div>
</div>
{% endblock %}
{% block javascript %}
    <script src="{{data.asset_path}}/script/helper/helper.js"></script>
    <script src="{{data.asset_path}}/script/service/request.js"></script>
	<script src="{{data.asset_path}}/script/controller/adminController.js"></script>
{% endblock %}