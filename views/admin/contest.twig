{% extends "./admin/layout.twig" %} {% block content %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            {{controller.dataContest.title}}
            <a class="btn btn-default pull-right" href="#">
                <i class="fa fa-stop stop-button" aria-hidden="true"></i> Stopper le concours
            </a>
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">Param√®tres</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form">
                            <div class="form-group">
                                <label>Nom du concours</label>
                                <input class="form-control" placeholder="Enter text" value="{{controller.dataContest.title}}" disabled>
                            </div>
                            <div class="form-group">
                                <label>Date de fin du concours</label>
                                <input type="date" class="form-control" placeholder="{{controller.dataContest.end}}" value="{{controller.dataContest.end}}" disabled>
                            </div>
                            <div class="form-group">
                                <label>Description du concours</label>
                                <textarea class="form-control" rows="4" disabled>
                                    {{controller.dataContest.text}}
                                </textarea>
                            </div>
                            <div class="form-group">
                                <label>Prix label</label>
                                <input class="form-control" placeholder="Enter text" value="Tatouage de votre choix" disabled>
                            </div>
                            <div class="form-group">
                                <label>Prix image</label>
                                <input type="file" disabled>
                            </div>
                            <button type="reset" class="btn btn-default pull-right edit-button">
                                          <i class="fa fa-pencil" aria-hidden="true"></i>
                                        </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                Participants
            </div>
            <div class="panel-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Email</th>
                            <th>Like</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for table_data in controller.tableData %}
                            <tr>
                                <td>{{table_data.first_name}}</td>
                                <td>{{table_data.last_name}}</td>
                                <td></td>
                                <td>{{table_data.vote}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <!-- /.table-responsive -->
                <a class="btn btn-default btn-lg btn-block export-button" href="#">
                    <i class="fa fa-external-link"></i>&nbsp; Exporter les participants
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}